#version 450 core

layout (local_size_x = 16) in;

layout(set = 0, binding = 0, rgba8) uniform writeonly image2D i_output;
layout(set = 0, binding = 1) uniform sampler2D i_input;


void main(){
    ivec2 px_coords = ivec2(gl_GlobalInvocationID.xy);
    vec4 color = texture(i_input, gl_GlobalInvocationID.xy);
    imageStore(i_output, px_coords, color);
}